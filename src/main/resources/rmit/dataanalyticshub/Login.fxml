<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rmit.dataanalyticshub.LoginController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="LOGIN">
      <font>
         <Font name="System Bold" size="18.0" />
      </font></Label>
   <TextField fx:id="txtID" promptText="ID" />
   <PasswordField fx:id="txtPassword" promptText="Password" />
   <Hyperlink text="Don't have an account? Sign Up&#10;" textAlignment="CENTER" underline="true" />
    <Button fx:id="btnLogin" onAction="#onBtnLoginAction" text="Login" />
</VBox>
