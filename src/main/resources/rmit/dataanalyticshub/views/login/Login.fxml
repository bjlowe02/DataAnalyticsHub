<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="paneLogin" alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rmit.dataanalyticshub.login.LoginController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label focusTraversable="false" text="LOGIN">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="txtUsername" focusTraversable="false" promptText="Username" />
      <PasswordField fx:id="txtPassword" focusTraversable="false" promptText="Password" />
      <Hyperlink fx:id="lnkCreateAccount" focusTraversable="false" onAction="#onLinkClick" text="Don't have an account? Sign Up&#10;" textAlignment="CENTER" underline="true" />
      <Button fx:id="btnLogin" focusTraversable="false" onAction="#onBtnLoginAction" text="Login" />
   </children>
</VBox>
