<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rmit.dataanalyticshub.createAccount.CreateAccountController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <Label focusTraversable="false" text="Create Account">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <TextField fx:id="txtFName" focusTraversable="false" promptText="First Name:" />
      <TextField fx:id="txtLName" focusTraversable="false" promptText="Last Name:" />
      <PasswordField fx:id="txtPassword" focusTraversable="false" promptText="Password:" />
      <PasswordField fx:id="txtRepeatPassword" focusTraversable="false" promptText="Repeat Password:" />
      <Button fx:id="btnCreateAccount" focusTraversable="false" onAction="#onBtnCreateAccountAction" text="Create Account" />
   </children>
</VBox>
